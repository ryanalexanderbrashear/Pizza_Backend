source 'https://rubygems.org'
gem 'rack' # Web server gem
gem 'rack-test' # For testing using Rack
gem 'grape' # API framework gem
gem 'sequel' # Connecting to the PostGres DB and easily interacting with it
gem 'webrick' # Needed to explicitly include this Gem due to an issue with Rack (?)
gem 'rspec' # Testing gem
gem 'pg' # PostGres gem, needed to fix errors with versions of Ruby
gem 'rack-cors', :require => 'rack/cors' # For setting up CORS rules on apps using Rack